.chat__side
  .chat__side__header
    .chat__side__header__box
      %p.chat__side__header__box__user-name 
        = current_user.name
      %ul.chat__side__header__box__menu
        %li.chat__side__header__box__menu__new-group
          =link_to new_group_path do
            = fa_icon 'edit', class: 'icon'
        %li.chat__side__header__box__menu__edit-user
          =link_to edit_user_path(current_user) do
            = fa_icon 'cog', class: 'icon'

  .groups
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .group__name
            = group.name
          .group__message
            = group.show_last_message