.chat_all
  .chat__main
    .chat__main__header
      .chat__main__header__left
        %h2.chat__main__header__left__name group name
        %ul.chat__main__header__left__member member
      .chat__main__header__right
        .chat__main__header__right 
          .chat__main__header__right__font Edit

    .messages
      .messages__info 
        .messages__info__talker shouya
